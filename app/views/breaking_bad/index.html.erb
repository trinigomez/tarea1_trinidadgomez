<html>
    <head>
        <link rel="stylesheet" href="../../assets/stylesheets/breaking_bad.scss">
    </head>

    <body>
        <h1>Temporadas Breaking Bad</h1>

            <div class="Seasons" id="Seasons">
                <% for i in 1..@num_seasons%>
                    <h3 onclick="showSeasons(<%=i %>)">Temporada <%= i %></h3>
                    <div class="season-episodes" id="season-episodes">
                    <% @episodes.each do |episode|%>
                        <% if episode["season"] == i.to_s %>
                            <h4><%= episode["episode"] %>. <%= link_to episode["title"] , breaking_bad_path(episode["episode_id"]) %></h3>
                        <% end %>
                    <% end %>
                </div>
                <% end %>

            </div>
    </body>



    <script>

        function showSeasons(num) {
            var episodes = document.getElementsByClassName("season-episodes")
            if (episodes[num-1].style.display == "block") {
                episodes[num-1].style.display="none"
            } else {
                episodes[num-1].style.display="block"
            }
        }


        if ('<%= @show_season %>' != "") {
            var season = document.getElementsByClassName("season-episodes")
            season['<%= @show_season %>' - 1].style.display = "block"
        } 
    </script>
</html>


